{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "OpenNotes Desktop default capabilities",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "store:default",
    "shell:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$TEMP/opennotes/**" },
        { "path": "$APPDATA/downloads/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$TEMP/opennotes" },
        { "path": "$APPDATA/downloads" }
      ]
    },
    {
      "identifier": "fs:allow-app-data-dir",
      "allow": [{}]
    }
  ]
}
