{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "OpenNotes Desktop default capabilities",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "store:default",
    "shell:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://open-notes.tebby2008-li.workers.dev/*" },
        { "url": "https://*.githubusercontent.com/*" },
        { "url": "https://opennotes.pages.dev/*" }
      ]
    }
  ]
}
